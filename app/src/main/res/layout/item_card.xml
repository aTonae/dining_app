<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/table"
        android:layout_centerVertical="true"
        android:id="@+id/imgItem"
        android:background="#006745"
        android:scaleType="centerInside"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemTitle"
        android:text="French Fries"
        android:textColor="#000"
        android:textStyle="bold"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:textSize="24dp"
        android:layout_toRightOf="@+id/imgItem"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemSubTitle"
        android:text="Potato Sliced, Garnished with baisils and beacon and salt over them."
        android:paddingLeft="12dp"
        android:layout_below="@+id/tvItemTitle"
        android:textSize="16dp"
        android:paddingBottom="8dp"
        android:layout_toRightOf="@+id/imgItem"/>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="Veg"
        android:id="@+id/tvOne"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="260 Orders"
        android:id="@+id/tvTwo"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/tvPrice"
        android:text="Rs. 120"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="#000"
        android:textSize="18dp"
        android:gravity="right"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>
</LinearLayout>